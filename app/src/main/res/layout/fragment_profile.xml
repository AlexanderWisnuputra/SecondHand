<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Profile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/poppins"
        android:padding="16dp"
        android:text="Akun Saya"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViews"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="20sp"
        android:layout_marginTop="78dp">
        <ImageView
            android:id="@+id/PhotoProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardViews"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_fi_edit_3"
        android:drawablePadding="6dp"
        android:fontFamily="@font/poppins"
        android:text="Ubah Akun"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/textSettingAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_fi_settings"
        android:textColor="@color/black"
        android:drawablePadding="6dp"
        android:text="Pengaturan Akun" />

    <TextView
        android:id="@+id/textLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSettingAcc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_fi_log_out"
        android:textColor="@color/black"
        android:drawablePadding="6dp"
        android:text="Keluar" />

    <TextView
        android:id="@+id/textVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLogout"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="Version 9.9.9" />

</RelativeLayout>