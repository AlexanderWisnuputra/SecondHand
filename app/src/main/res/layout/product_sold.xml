<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_iv_detail_poster"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_width="156dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sorder_image"
            android:adjustViewBounds="true"
            android:layout_width="140dp"
            android:layout_height="140dp"
            tools:src="@drawable/home_gift" />

    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/sorder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:maxLines="2"
            android:textSize="17sp"
            android:text="Jam Tangan Casio"/>
        <TextView
            android:id="@+id/sorder_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="#8A8A8A"
            android:text="Aksesoris"/>
        <TextView
            android:id="@+id/sorder_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:textSize="17sp"
            android:singleLine="true"
            android:text="Rp 250.000"/>
        </LinearLayout>

</androidx.cardview.widget.CardView>